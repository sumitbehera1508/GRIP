<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:id="@+id/badgedButtonContainer"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/colorLightestGrey"
                                             android:clickable="true"
                                             android:focusable="true"
                                             android:orientation="vertical"
                                             android:paddingBottom="3dp"
                                             android:paddingTop="1dp">


    <ImageView
            android:id="@+id/badgedButtonImageImgVw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher_round"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" app:layout_constraintVertical_bias="0.51"/>

    <TextView
            android:id="@+id/badgedButtonBadgeTxtVw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/badge_background"
            android:padding="4dp"
            android:text="9+"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/small_font"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/badgedButtonImageImgVw"
            app:layout_constraintTop_toTopOf="@+id/badgedButtonImageImgVw"/>


    <TextView
            android:id="@+id/badgedButtonTextTxtVw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Badged Button"
            android:textAlignment="center"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/badgedButtonImageImgVw"
            app:layout_constraintHorizontal_bias="0.489"
            app:layout_constraintStart_toStartOf="@+id/badgedButtonImageImgVw"
            app:layout_constraintTop_toBottomOf="@+id/badgedButtonImageImgVw"/>

</android.support.constraint.ConstraintLayout>